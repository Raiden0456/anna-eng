  <!-- Hero2 Widget ******************* -->

  <Hero
    id="hero"
    title="Anna Gurkovich"
    tagline="Remote English Teacher"
    actions={[{ variant: 'primary', text: 'Contact me!', href: getPermalink('https://wa.me/79140720503') }]}
