import vrezh from '../assets/images/vrezh.jpg';
import cats_college from '../assets/images/cats-college.jpg';
import converse from '../assets/images/converse.jpg';
import eef from '../assets/images/eef.jpg';
import hse from '../assets/images/hse.jpg';
